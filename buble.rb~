def buble_sort(arr) 
	unordered = true
	while unordered
		unordered = false
		for i in (1..arr.size-1)
			if(arr[i-1] > arr[i])
				arr[i-1], arr[i] = arr[i], arr[i-1] 
				unordered = true;
			end
		end
	end
	arr
end

def buble_sort_by(arr)
	unordered = true
	while unordered
		unordered = false
		for i in (1..arr.size-1)
			if(yield(arr[i-1],arr[i]))
				arr[i-1], arr[i] = arr[i], arr[i-1]
				unordered = true;
			end
		end
	end
	arr
end

a = [2,4,1,-4,10,0]
puts buble_sort(a).join(",")
puts buble_sort_by(a) { |a, b| a <=> b }.join(",")